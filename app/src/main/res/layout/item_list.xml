<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginEnd="5dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/gambar"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_left_margin"
        android:layout_marginStart="@dimen/activity_left_margin"
        />

    <LinearLayout
        android:layout_width="281dp"
        android:layout_height="160dp"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_right_margin"
        android:layout_marginRight="@dimen/activity_right_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_toEndOf="@id/gambar"
        android:layout_toRightOf="@id/gambar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/president_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:hint="President"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/jabatan_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jabatan"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/button2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/activity_right_margin"
                android:layout_marginRight="@dimen/activity_right_margin"
                android:layout_weight="1"
                android:background="@color/pink"
                android:text="Favorite"
                android:layout_gravity="bottom"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button3"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginEnd="@dimen/activity_right_margin"
                android:layout_marginRight="@dimen/activity_right_margin"
                android:layout_weight="1"
                android:background="@color/pink"
                android:text="Share"
                android:layout_gravity="bottom"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>